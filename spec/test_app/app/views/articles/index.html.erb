<p>
  <%= popup "Show Article", article_path(10) %>
</p>
<%= search_form_for(Article, "articles.created_at",:title, [:updated_at, {:ampm=>true}], :published,
  [:published_at, {:null_check => true}], [:id, {:range => true}], ["comments.score", {:collection=>[1,3,5]}], :simple => 2).html_safe %>

<div id="list">
  <%= list_table_for @articles, :update => "list" do |item, col|

    col.add :id
    col.add :title
  end
%>
</div>